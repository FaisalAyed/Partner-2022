@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<section class="vh-100 bg-image" style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp') ;">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">انشاء حساب</h2>

              <form  id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"> 
 
                <div class="form-outline mb-4">
                   <label class="form-label" asp-for="Input.firstName"></label>
                  <input asp-for="Input.firstName" class="form-control form-control-lg autocomplete="username" aria-required="true" />
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  
                </div>
                <div class="form-outline mb-4">
                  
                  <label class="form-label" asp-for="Input.lastName"></label>
                  <input asp-for="Input.lastName"  class="form-control form-control-lg  aria-required="true" />
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>

                <div class="form-outline mb-4">
                  
                  <label class="form-label" asp-for="Input.Email"></label>
                  <input asp-for="Input.lastName" class="form-control form-control-lg" />
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>

                <div class="form-outline mb-4">
                 
                  <label class="form-label" asp-for="Input.Password"></label>
                  <input asp-for="Input.Password" class="form-control form-control-lg" />
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>

                <div class="form-outline mb-4">
                 
                  <label class="form-label" asp-for="Input.ConfirmPassword"> </label>
                   <input asp-for="Input.ConfirmPassword" id="form3Example4cdg" class="form-control focrm-control-lg" />
                   <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>

                <div class="form-check d-flex justify-content-center mb-5">
                  <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                  <label class="form-check-label" for="form2Example3g">
                    اوافق على جميع القوانين <a href="#!" class="text-body"><u>Terms of service</u></a>
                  </label>
                </div>

                <div class="d-flex justify-content-center">
                  <button id ="registerSubmit" type="button" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">تسجيل</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">لديك بالفعل حساب؟<a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                    class="fw-bold text-body"><u> تسجيل دخول</u></a></p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

                @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
